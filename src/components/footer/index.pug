mixin footer    
    footer(class='footer')
        div(class='footer__strip')
            include ../../assets/img/footer-strip-mob.svg
            include ../../assets/img/footer-strip.svg
        div(class='footer__wrapper')
            div(class='container')

                div(class='footer__socials')
                    div
                        a(href='https://www.facebook.com/fibonsrl/?locale=es_LA' target='_blank' title='Facebook')
                            include ../../assets/img/icons/facebook.svg
                        a(href='https://www.instagram.com/fibon.srl/' target='_blank' title='Instagram')
                            include ../../assets/img/icons/instagram.svg

                div(class='footer__info')
                    h3 Datos de contacto
                    div(class='wrap')
                        ul 
                            li
                                include ../../assets/img/icons/location.svg
                                p Aguilar 3921, Lanús Este - Pcia de Buenos Aires
                            li
                                include ../../assets/img/icons/phone.svg
                                p #[a(href='tel:(011) 4246-8665') (011) 4246-8665]
                            li
                                include ../../assets/img/icons/whatsapp.svg
                                p #[a(href='tel:(011) 15 6940-4262') (011) 15 6940-4262]
                            li
                                include ../../assets/img/icons/mail.svg
                                p #[a(href='mailto:info@fibonsrl.com.ar') info@fibonsrl.com.ar]
                        p(class='legales') #[a(hreef='#' target='_blank' title='Políticas de calidad') Políticas de calidad]
            div(class='footer__copy')
                div(class='container')
                    p Copyright © Fibon - 2025. #[span Todos los derechos reservados.]
    +whatsapppBtn()
